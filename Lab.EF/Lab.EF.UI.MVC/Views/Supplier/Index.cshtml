@model IEnumerable<Lab.EF.UI.MVC.Models.Supplier.SupplierListViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Suppliers</h2>

<div style="padding: 2rem;">
    <a class="btn btn-primary pull-right" href="@Url.Action("CreateOrEdit", "Supplier")"><span class="glyphicon glyphicon-plus"></span> New supplier</a>
</div>

<table class="table table-responsive table-striped text-center">
    <thead>
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.ContactName)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model)
        {
            <tr>
                <td>
                    @supplier.CompanyName
                </td>
                <td>
                    @supplier.ContactName
                </td>
                <td>
                    @supplier.Phone
                </td>
                <td>
                    <a class="btn-sm btn-info" href="@Url.Action("Details", "Supplier", new { id = supplier.Id})"><span class="glyphicon glyphicon-zoom-in"></span></a>
                    <a class="btn-sm btn-success" href="@Url.Action("CreateOrEdit", "Supplier", new { id = supplier.Id})"><span class="glyphicon glyphicon-pencil"></span></a>
                    <a class="btn-sm btn-warning" onclick="handleDeleteModalShow('@supplier.CompanyName-@supplier.Id')"><span class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="modal fade" id="delete-modal">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3 class="modal-title text-center" id="modal-title">Delete Supplier</h3>
            </div>
            <div class="modal-body">
                <p id="delete-message" class="text-center"></p>
            </div>
            <div class="modal-footer">
                <a id="delete-btn" class="btn btn-danger" asp-action="Delete">Delete</a>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        const handleDeleteModalShow = (supplier) => {
            const name = supplier.split('-')[0];
            const id = parseInt(supplier.split('-')[1]);

            const message = document.getElementById("delete-message");
            const btn = document.getElementById("delete-btn");

            btn.setAttribute("href", '/Supplier/Delete/' + id);
            message.innerText = "Are you sure you want to delete " + name;

            $('#delete-modal').modal("show");
        }
    </script>
}