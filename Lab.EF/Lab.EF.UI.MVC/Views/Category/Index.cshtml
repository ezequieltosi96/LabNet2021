@model IEnumerable<Lab.EF.UI.MVC.Models.Category.CategoryViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Categories</h2>

<div style="padding: 2rem;">
    <a class="btn btn-primary pull-right" href="@Url.Action("CreateOrEdit", "Category")"><span class="glyphicon glyphicon-plus"></span> New category</a>
</div>

<table class="table table-responsive table-striped text-center">
    <thead>
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>
                    @category.Name
                </td>
                <td>
                    @category.Description
                </td>
                <td>
                    <a class="btn-sm btn-info" href="@Url.Action("Details", "Category", new { id = category.Id})"><span class="glyphicon glyphicon-zoom-in"></span></a>
                    <a class="btn-sm btn-success" href="@Url.Action("CreateOrEdit", "Category", new { id = category.Id})"><span class="glyphicon glyphicon-pencil"></span></a>
                    <a class="btn-sm btn-warning" onclick="handleDeleteModalShow('@category.Name-@category.Id')"><span class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="modal fade" id="delete-modal">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3 class="modal-title text-center" id="modal-title">Delete Category</h3>
            </div>
            <div class="modal-body">
                <p id="delete-message" class="text-center"></p>
            </div>
            <div class="modal-footer">
                <a id="delete-btn" class="btn btn-danger" asp-action="Delete">Delete</a>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        const handleDeleteModalShow = (category) => {
            const name = category.split('-')[0];
            const id = parseInt(category.split('-')[1]);

            const message = document.getElementById("delete-message");
            const btn = document.getElementById("delete-btn");

            btn.setAttribute("href", '/Category/Delete/' + id);
            message.innerText = "Are you sure you want to delete " + name;

            $('#delete-modal').modal("show");
        }
    </script>
}