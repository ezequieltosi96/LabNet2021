@model IEnumerable<Lab.LINQ.Entities.Product>
@{
    ViewBag.Title = "GetProductsWithCategories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center" style="margin: 4rem;">Get Products With Categories</h2>

<table class="table table-striped table-hover text-center">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.UnitsInStock)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Categories)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Discontinued)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitsInStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categories.CategoryName)
            </td>
            <td>
                @if (item.Discontinued)
                {
                    <span>Yes</span>
                }
                else
                {
                    <span>No</span>
                }
            </td>
            <td>
                @Html.ActionLink("Product Details", "GetProduct", new { id = item.ProductID })
            </td>
        </tr>
    }

</table>
