@model IEnumerable<Lab.LINQ.UI.Web.Models.Customer.CustomerWithOrderViewModel>

@{
    ViewBag.Title = "GetWashingtonCustomersWithOrderDateGreaterThan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center" style="margin: 4rem;">Get Washington Customers With Order Date Greater Than 01/01/1997</h2>

<table class="table table-striped table-hover text-center">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.CustomerID)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.ContactName)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Region)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.OrderID)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
        </tr>
    }

</table>
